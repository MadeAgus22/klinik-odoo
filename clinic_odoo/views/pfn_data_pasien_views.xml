<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- LIST -->
    <record id="pfn_data_pasien_view_list" model="ir.ui.view">
      <field name="name">pfn.data.pasien.list</field>
      <field name="model">pfn.data.pasien</field>
      <field name="arch" type="xml">
        <list string="Data Pasien">
          <field name="no_rm" string="No. RM"/>
          <field name="name" string="Nama Lengkap"/>
          <field name="no_identitas" string="No. KTP"/>
          <field name="alamat" string="Alamat"/>
          <field name="gender" string="Jenis Kelamin"/>
          <field name="phone" string="HP"/>
          <field name="email" string="E-mail"/>
          <field name="active" string="Aktif"/>
        </list>
      </field>
    </record>

    <!-- FORM -->
    <record id="pfn_data_pasien_view_form" model="ir.ui.view">
      <field name="name">pfn.data.pasien.form</field>
      <field name="model">pfn.data.pasien</field>
      <field name="arch" type="xml">
        <form string="Data Pasien">
          <sheet>
            <group>
              <group>
                <field name="no_rm" readonly="1" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
                <field name="name" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
                <field name="no_identitas" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
                <field name="tempat_lahir" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
                <field name="tanggal_lahir" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
                <field name="umur_display" readonly="1" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
              </group>
              <group>
                <field name="gender" widget="radio"/>
                <field name="alamat" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
                <field name="phone" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
                <field name="email" widget="email" style="border: 1px solid #d4c4c4; padding: 5px; border-radius: 4px;"/>
                <field name="active"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- SEARCH -->
    <record id="pfn_data_pasien_view_search" model="ir.ui.view">
      <field name="name">pfn.data.pasien.search</field>
      <field name="model">pfn.data.pasien</field>
      <field name="arch" type="xml">
        <search string="Cari Pasien">
          <field name="no_rm"/>
          <field name="name"/>
          <field name="no_identitas"/>
          <field name="phone"/>
          <filter name="active_yes" string="Aktif" domain="[('active','=',True)]"/>
          <filter name="active_no" string="Nonaktif" domain="[('active','=',False)]"/>
        </search>
      </field>
    </record>

    <!-- ACTION (WAJIB ada sebelum menu yang memanggilnya) -->
    <record id="pfn_data_pasien_action" model="ir.actions.act_window">
      <field name="name">Data Pasien</field>
      <field name="res_model">pfn.data.pasien</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="pfn_data_pasien_view_search"/>
    </record>

    <!-- MENU TOP-LEVEL: sejajar dengan Data Master -->
    <menuitem id="menu_pendaftaran"
              name="Pendaftaran"
              parent="clinic_odoo.menu_dashboard_clinic"
              sequence="20"/>

    <!-- SUBMENU -->
    <menuitem id="menu_pfn_data_pasien"
              name="Data Pasien"
              parent="menu_pendaftaran"
              action="pfn_data_pasien_action"
              sequence="10"/>

  </data>
</odoo>
