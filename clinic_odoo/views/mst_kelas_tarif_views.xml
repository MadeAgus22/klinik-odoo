<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- LIST VIEW -->
    <record id="mst_kelas_tarif_view_list" model="ir.ui.view">
      <field name="name">mst.kelas.tarif.list</field>
      <field name="model">mst.kelas.tarif</field>
      <field name="arch" type="xml">
        <list string="Daftar Grup Kelas Tarif" create="true" delete="true" edit="true">
          <field name="kode" string="Kode Kelas"/>
          <field name="name" string="Nama Kelas"/>
          <field name="active" string="Status"/>
          <!-- Aksi: toggle aktif/nonaktif (tanpa attrs, pakai ekspresi Odoo 18) -->
          <button name="action_toggle_active" type="object" class="oe_link"
                  string="Nonaktifkan" invisible="not active == False and not active == 0 and not active == '' and not active == None and not active == False and not active == 0 and not active == ''"/>
          <button name="action_toggle_active" type="object" class="oe_link"
                  string="Aktifkan"    invisible="active"/>
          <field name="description" string="Catatan"/>
        </list>
      </field>
    </record>

    <!-- FORM VIEW -->
    <record id="mst_kelas_tarif_view_form" model="ir.ui.view">
      <field name="name">mst.kelas.tarif.form</field>
      <field name="model">mst.kelas.tarif</field>
      <field name="arch" type="xml">
        <form string="Master Grup Kelas Tarif">
          <sheet>
            <group>
              <field name="kode" string="Kode Kelas"/>
              <field name="name" string="Nama Kelas"/>
              <field name="active" string="Status"/>
            </group>
            <group>
              <field name="description" string="Catatan" placeholder="Catatan..."/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="mst_kelas_tarif_view_search" model="ir.ui.view">
      <field name="name">mst.kelas.tarif.search</field>
      <field name="model">mst.kelas.tarif</field>
      <field name="arch" type="xml">
        <search string="Cari Kelas Tarif">
          <field name="kode" string="Kode Kelas"/>
          <field name="name" string="Nama Kelas"/>
          <filter string="Aktif" name="active_true" domain="[('active','=',True)]"/>
          <filter string="Arsip" name="active_false" domain="[('active','=',False)]"/>
        </search>
      </field>
    </record>

    <!-- ACTION -->
    <record id="mst_kelas_tarif_action" model="ir.actions.act_window">
      <field name="name">Master Grup Kelas Tarif</field>
      <field name="res_model">mst.kelas.tarif</field>
      <field name="view_mode">list,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Belum ada data Kelas Tarif. Buat yang baru!
        </p>
      </field>
    </record>

    <!-- MENU (di bawah Data Master). 
         Jika menu 'Data Master' didefinisikan di file lain sebagai `menu_bar_clinic`,
         pakai xmlid ter-namespace: parent="clinic_odoo.menu_bar_clinic" -->
    <menuitem id="menu_item_master_kelas_tarif"
              name="Master Grup Kelas Tarif"
              parent="clinic_odoo.menu_bar_clinic"
              action="mst_kelas_tarif_action"
              sequence="40"/>

  </data>
</odoo>
